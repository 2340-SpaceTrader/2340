<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.AddPlayerActivity">

    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_header"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="11dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/student_name_input"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@id/name_header"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="Difficulty:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/difficulty_header"
        android:layout_below="@+id/name_header"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_header"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/difficulty_header"
        android:id="@+id/difficulty_spinner" />

    <TextView
        android:text="Skill Points:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/skill_points_header"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/difficulty_header"
        android:layout_marginTop="25dp" />

    <TextView
        android:text="Pilot:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pilot_header"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/skill_points_header"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/pilot_points_input"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@id/pilot_header"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="Fighter:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fighter_header"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pilot_header"
        android:layout_marginTop="38dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/fighter_points_input"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@id/fighter_header"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="Trader:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trader_header"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/fighter_header"
        android:layout_marginTop="45dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/trader_points_input"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@id/trader_header"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="Engineer:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/engineer_header"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/trader_header"
        android:layout_marginTop="45dp" />

    <EditText
        android:id="@+id/engineer_points_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@id/engineer_header"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="12dp"
        android:text="Ok" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="297dp"
        android:layout_marginBottom="10dp"
        android:text="Exit" />

</RelativeLayout>