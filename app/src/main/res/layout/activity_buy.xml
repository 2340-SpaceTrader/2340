<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/buyList_spinner"
        android:layout_width="243dp"
        android:layout_height="41dp"
        android:layout_marginTop="184dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="19dp" />

    <Button
        android:id="@+id/done_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="56dp"
        android:text="Done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy_count" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="172dp"
        android:text="BACK"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buyList_spinner" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="146dp"
        android:layout_height="43dp"
        android:layout_marginTop="120dp"
        android:text="Buy Item(s)"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="114dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="303dp"
        android:layout_height="76dp"
        android:layout_marginTop="24dp"
        android:text="MARKET PLACE"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="62dp" />

    <EditText
        android:id="@+id/buy_count"
        android:layout_width="63dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="184dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/buyList_spinner"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>